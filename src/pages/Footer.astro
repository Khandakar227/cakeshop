const nav_items = ['Home', 'Catalog', 'About', 'Contact'];

---

<footer>
<container class="grid-center">
<div class="grid-center">
    <h4><img style="max-width: 30px;" src={logo} alt="Logo"/>{title}</h4>
    <div class="social-profile">
    <button class="transparent--button">{instagramIcon()}</button>
    <button class="transparent--button">{facebookIcon()}</button>
    <button class="transparent--button">{whatsappIcon()}</button>
    </div>
</div>
<div class="menu">
    <h4>Menu</h4>
    <div>
        {nav_items.map(item => (
            <button class="transparent--button">{item}</button>
        ))}
    </div>
</div>
<div class="grid-center">
    <h4>Contact</h4>
    <p>{contactNum}</p>
</div>
</container>
</footer>

<style>
.grid-center {
    display: grid;
    justify-content: center;
}
.grid-center h4 {display: flex; align-items: center;gap: 5px;}
.menu {
    text-align: center;
}
.menu div {
    display: grid;
    justify-content: center;
    grid-template-columns: repeat(auto-fit, minmax(100px,1fr));
    gap: 1vw;
}
footer {
    padding: 1rem 0rem;
    background: #ffd9d9;
}
container h4 {
    padding: 1rem;
}
container {
    grid-template-columns: repeat(auto-fit, minmax(200px,1fr));
    margin: 0 10px;
    gap: 5px;
}
</style>